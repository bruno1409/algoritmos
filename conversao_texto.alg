algoritmo "conversao_texto"
// Algoritmo que converte texto de maiúsculas para minúsculas
var
   texto: caracter
// Procedimento linha
procedimento linha
inicio
   escreval("--------------------------------")
fimprocedimento
// Início do algoritmo
inicio
   escreva("Digite um texto em maiúsculas: ")
   leia(texto)
   limpatela
   linha
   escreval(minusc(texto))
   linha
fimalgoritmo
